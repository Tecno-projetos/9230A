        <Label x:Name="pesoTonelada" Content="1000" Margin="295,88,0,0" VerticalAlignment="Top" Width="58" BorderBrush="Black" Background="{x:Null}" Foreground="White" VerticalContentAlignment="Center" Height="21" Padding="0" FontWeight="Bold" HorizontalAlignment="Left" HorizontalContentAlignment="Right" FontSize="16"/>
        <Label Content="kg" HorizontalAlignment="Left" Margin="353,94,0,0" VerticalAlignment="Top" Width="25" BorderBrush="Black" Background="{x:Null}" Foreground="White" VerticalContentAlignment="Center" Height="17" Padding="0" FontWeight="Bold" FontSize="8"/>
