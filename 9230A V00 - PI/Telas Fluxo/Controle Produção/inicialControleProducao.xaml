                <TextBlock TextAlignment="Center" FontFamily="Champagne &amp; Limousines" Foreground="White" Margin="36,8,15,6" Width="119" FontSize="14" FontWeight="Normal" VerticalAlignment="Center" HorizontalAlignment="Center" Text="Batelada 2"/>
            </Grid>
        </Button>
        <Label x:Name="statusSlot3" Content="Status Rota" HorizontalAlignment="Left" Margin="195,233,0,0" VerticalAlignment="Top" Width="285" BorderBrush="Black" Background="#FFAC0F0F" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="34" Padding="0"/>
        <Button x:Name="bt3" Margin="10,233,0,0" Background="#FF505050" BorderBrush="Black" Click="bt3_Click" HorizontalAlignment="Left" Width="180" Height="34" VerticalAlignment="Top">
            <Grid Width="170" Height="32">
                <materialDesign:PackIcon Kind="GearBox" VerticalAlignment="Center" Foreground="White" Margin="2,1,0,1" Height="30" Width="30"/>
                <TextBlock TextAlignment="Center" FontFamily="Champagne &amp; Limousines" Foreground="White" Margin="36,8,15,6" Width="119" FontSize="14" FontWeight="Normal" VerticalAlignment="Center" HorizontalAlignment="Center" Text="Batelada 3"/>
