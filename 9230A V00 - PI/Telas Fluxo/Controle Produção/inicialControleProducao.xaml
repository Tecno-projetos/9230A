            <Grid Width="170" Height="30">
                <materialDesign:PackIcon Kind="GearBox" VerticalAlignment="Center" Foreground="White" Margin="2,0,0,0" Height="30" Width="30"/>
                <TextBlock TextAlignment="Center" FontFamily="Champagne &amp; Limousines" Foreground="White" Margin="36,8,15,6" Width="119" FontSize="14" FontWeight="Normal" VerticalAlignment="Center" HorizontalAlignment="Center" Text="Batelada 1"/>
            </Grid>
        </Button>
        <Label x:Name="statusSlot2" Content="Status Rota" HorizontalAlignment="Left" Margin="195,194,0,0" VerticalAlignment="Top" Width="285" BorderBrush="Black" Background="#FFAC0F0F" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="34" Padding="0"/>
