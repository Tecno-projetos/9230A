             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Width="490" Height="295">
    <Grid Background="#FF646464">
        <Label x:Name="statusSlot1" Content="Status Rota" HorizontalAlignment="Left" Margin="195,155,0,0" VerticalAlignment="Top" Width="285" BorderBrush="Black" Background="#FFAC0F0F" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="34" Padding="0"/>
        <Label x:Name="lbNomeReceita" Content="NOME DA RECEITA" HorizontalAlignment="Left" VerticalAlignment="Top" Width="490" BorderBrush="Black" Background="{x:Null}" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="25" Padding="0" FontSize="22" FontWeight="Bold" Margin="0,2,0,0"/>
        <Label Content="N° Bateladas:" HorizontalAlignment="Left" Margin="150,50,0,0" VerticalAlignment="Top" Width="100" BorderBrush="Black" Background="{x:Null}" Foreground="White" VerticalContentAlignment="Center" Height="25" Padding="0" FontWeight="Bold" FontSize="15"/>
        <Label x:Name="numeroBateladas" Content="120" Margin="306,50,0,0" VerticalAlignment="Top" Width="39" BorderBrush="Black" Background="{x:Null}" Foreground="#FF1AD308" VerticalContentAlignment="Center" Height="24" Padding="0" FontWeight="Bold" HorizontalAlignment="Left" HorizontalContentAlignment="Right" FontSize="16"/>
        <Label Content="und." HorizontalAlignment="Left" Margin="347,57,0,0" VerticalAlignment="Top" Width="25" BorderBrush="Black" Background="{x:Null}" Foreground="White" VerticalContentAlignment="Center" Height="17" Padding="0" FontWeight="Bold" FontSize="8"/>
        <materialDesign:PackIcon Kind="DotsVerticalCircle" VerticalAlignment="Top" Foreground="White" Height="21" Margin="129,53,0,0" Width="20"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="5" Margin="5,31,0,0" Stroke="Black" VerticalAlignment="Top" Width="485"/>
