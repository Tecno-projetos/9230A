        <Grid Style="{StaticResource EntryFieldStyle}" Margin="451,231,18,403" Height="41" Background="#FF3C3C3C" >
            <TextBlock Margin="5,0,6,5" Text="Exemplo: 360" Foreground="#FF919191" VerticalAlignment="Bottom" FontSize="14" >
