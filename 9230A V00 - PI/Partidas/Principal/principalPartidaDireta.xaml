<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_9230A_V00___PI.Partidas.Principal"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        xmlns:Outras_Telas="clr-namespace:_9230A_V00___PI.Partidas.Outras_Telas" 
        xmlns:partidas="clr-namespace:_9230A_V00___PI.Partidas.Controle" 
        x:Class="_9230A_V00___PI.Partidas.Principal.principalPartidaDireta" 
    
         mc:Ignorable="d" Height="506" Width="825" ResizeMode="NoResize" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <Grid Background="#FF5B5B5B">

        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="115" Margin="2,365,0,0" VerticalAlignment="Top" Width="817" Stroke="White"/>
        <Button x:Name="btHome" Margin="20,370,0,0" Background="#FF505050" BorderBrush="Black" HorizontalAlignment="Left" Width="60" Height="60" VerticalAlignment="Top">
            <Grid Width="57" Height="60">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Content="Home" Margin="0,34,0,0" HorizontalContentAlignment="Center" FontWeight="Bold" FontSize="10" Foreground="White"/>
                <materialDesign:PackIcon x:Name="pckInicial" Kind="HomeAnalytics"  VerticalAlignment="Center" Foreground="White" Margin="9,0,0,23" HorizontalAlignment="Left" Width="39" Height="37"/>
            </Grid>
        </Button>
        <Button x:Name="btConfig" Margin="87,370,0,0" Background="#FF505050" BorderBrush="Black" HorizontalAlignment="Left" Width="60" Height="60" VerticalAlignment="Top">
            <Grid Width="57" Height="60">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Content="Config." Margin="0,34,0,0" HorizontalContentAlignment="Center" FontWeight="Bold" FontSize="10" Foreground="White"/>
                <materialDesign:PackIcon x:Name="pckConfiguracoes" Kind="GearBox" VerticalAlignment="Center" Foreground="White" Margin="9,0,0,23" HorizontalAlignment="Left" Width="39" Height="37"/>
            </Grid>
        </Button>
        <Button x:Name="btAlarms" Margin="154,370,0,0" Background="#FF505050" BorderBrush="Black" HorizontalAlignment="Left" Width="60" Height="60" VerticalAlignment="Top">
            <Grid Width="57" Height="60">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Content="Alarmes" Margin="4,34,3,0" Width="50" HorizontalContentAlignment="Center" FontWeight="Bold" FontSize="10" Foreground="White"/>
                <materialDesign:PackIcon x:Name="pckAlarmes" Kind="Alert" VerticalAlignment="Center" Foreground="White" Margin="10,0,0,23" HorizontalAlignment="Left" Width="39" Height="37"/>
            </Grid>
        </Button>
        <Button x:Name="btFechar"  Margin="20,435,0,0" Background="Red" BorderBrush="Black" Height="35" VerticalAlignment="Top" HorizontalAlignment="Left" Width="194" Click="btFechar_Click">
            <Button.Resources>
                <ResourceDictionary>
                    <ResourceDictionary.MergedDictionaries>
                        <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.Blue.xaml" />
                        <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Accent/MaterialDesignColor.Indigo.xaml" />
                        <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />


                    </ResourceDictionary.MergedDictionaries>
                    <SolidColorBrush x:Key="brushWatermarkBackground" Color="White" />
                    <SolidColorBrush x:Key="brushWatermarkForeground" Color="LightSteelBlue" />
                    <SolidColorBrush x:Key="brushWatermarkBorder" Color="Black" />

                    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

                    <Style x:Key="EntryFieldStyle" TargetType="{x:Type Grid}" >
                        <Setter Property="HorizontalAlignment" Value="Stretch" />
                        <Setter Property="VerticalAlignment" Value="Center" />
                        <Setter Property="Margin" Value="20,0" />
                    </Style>
                </ResourceDictionary>

            </Button.Resources>

            <Grid Width="150">
                <materialDesign:PackIcon Kind="Close" VerticalAlignment="Center" Foreground="White" Height="30" Margin="-22,0,0,-8" Width="42"/>
                <TextBlock HorizontalAlignment="Center" Text="Fechar" FontFamily="Champagne &amp; Limousines" Foreground="White" FontSize="18" Margin="49,1,49,-1"/>
            </Grid>
        </Button>


        <TabControl HorizontalAlignment="Left" Height="360" VerticalAlignment="Top" Width="815" Background="{x:Null}" BorderBrush="Transparent">
            <TabItem x:Name="Home" Header="TabItem" Margin="19,370,-21,-398" Opacity="0" Cursor="Hand" PreviewMouseLeftButtonUp="Home_PreviewMouseLeftButtonUp">
                <Grid Background="#FF5B5B5B" Margin="-3,-38,0,0" HorizontalAlignment="Left" Width="247" Height="369" VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <partidas:controlePartidaDireta x:Name="controlePD" HorizontalAlignment="Left" Height="364" VerticalAlignment="Top" Width="244"/>

                </Grid>
            </TabItem>
            <TabItem x:Name="alarmes_Tela" Header="TabItem" Margin="98,370,-102,-399" Opacity="0" Cursor="Hand" PreviewMouseLeftButtonUp="alarmes_Tela_PreviewMouseLeftButtonUp">
                <Grid Background="#FF5B5B5B" Margin="-2,-35,-6,75"/>
            </TabItem>
            <TabItem x:Name="config" Header="TabItem" Margin="-23,370,23,-399" Opacity="0" Cursor="Hand" HorizontalAlignment="Right" Width="58" PreviewMouseLeftButtonUp="config_PreviewMouseLeftButtonUp">
                <Grid Background="#FF5B5B5B" Margin="-3,-38,0,0" HorizontalAlignment="Left" Width="247" Height="369" VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Outras_Telas:configuracoesPartidas x:Name="configuracoesPD" HorizontalAlignment="Left" Height="364" VerticalAlignment="Top" Width="244"/>

                </Grid>
            </TabItem>
        </TabControl>
        <Image HorizontalAlignment="Left" Height="80" Margin="555,387,0,0" VerticalAlignment="Top" Width="254" Source="/9230A V00 - PI;component/Imagens/Logo_Automasul.png"/>

    </Grid>
</Window>
